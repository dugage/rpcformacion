                  scorm.SetInteractionValue("cmi.interactions.0.student_response",question0);
                  break;
               }
            }
           
            scorm.SetInteractionValue("cmi.interactions.1.id","key1b235");
            scorm.SetInteractionValue("cmi.interactions.1.type","choice");
