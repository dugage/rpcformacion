           <unicode value="3.5. Gabinete de crisis"></unicode>
           <string role="key" value="idevices"></string>
           <list>
            <instance class="exe.engine.freetextidevice.FreeTextIdevice" reference="30">
             <dictionary>
              <string role="key" value="_title"></string>
